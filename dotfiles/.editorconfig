# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[{.bash*, *.sh}]
indent_size = 2
max_line_length = 80

[*.{css, ts, json, js, tsx, jsx, njk}]
indent_size = 2
max_line_length = 80

[Brewfile]
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[Dockerfile]
indent_size = 2

[{*.gradle, *.groovy, *Jenkinsfile*}]
indent_size = 4

[*.html]
indent_size = 2

[*.java]
indent_size = 2
max_line_length = 100
ij_continuation_indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{ps1, psm1}]
indent_size = 4

[*.py]
indent_size = 4
max_line_length = 88

[*.xml]
indent_size = 4
indent_style = tab

[*.{yml, yaml}]
indent_size = 2
max_line_length = 100
