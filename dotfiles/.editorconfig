# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[{.bash*,*.sh}]
indent_size = 2
max_line_length = 80

[*.{css,ts,json,js,tsx,jsx}]
indent_size = 2
indent_style = space
max_line_length = 80

[Dockerfile]
indent_size = 2
indent_style = space

[{*.gradle,*.groovy,*Jenkinsfile*}]
indent_size = 4

[*.html]
indent_size = 2

[*.java]
indent_size = 2
max_line_length = 100
continuation_indent_size = 4

[*.j2]
end_of_line = lf

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

[*.{ps1,psm1}]
charset = utf-8-bom
indent_size = 4

[*.py]
indent_size = 4
max_line_length = 80

[*.xml]
indent_size = 4
indent_style = tab

[*.{yml,yaml}]
indent_size = 2
indent_style = space
max_line_length = 100
