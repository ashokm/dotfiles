# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.{js,ts,json,css}]
indent_style=space
indent_size=2
continuation_indent_size=2
max_line_length=100

[*.java]
max_line_length = 100
indent_style = space
indent_size = 4
continuation_indent_size = 8

[{Jenkinsfile,*.gradle,*.groovy}]
indent_style=space
indent_size=4

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.xml]
indent_style = tab
indent_size = 4

[*.yml]
max_line_length = 100
indent_style = space
indent_size = 2
