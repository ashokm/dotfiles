##################################################
[core]
    editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore

##################################################
[push]
	default = simple

[pull]
    rebase = true

##################################################
[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red bold # deletions
	new = green bold # additions

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

##################################################
[diff]
	tool = intellij
	compactionHeuristic = true

[merge]
	tool = intellij
	stat = true

# Intellij IDEA
[difftool "intellij"]
  cmd = idea diff \"$LOCAL\" \"$REMOTE\"
  trustExitCode = true

[mergetool "intellij"]
  cmd = idea merge \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
  trustExitCode = true
